<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pozadie2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:onClick="pausa"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/pozadie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tr">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/pozadie3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/druhe_pozadie" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#004A2929"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/highScoreView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="High Score:"
                    android:textColor="#FFFDFD"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/pause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="pausa"
                    app:srcCompat="@drawable/pause_button" />

                <TextView
                    android:id="@+id/scoreView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=":Score"
                    android:textColor="#F4EEEE"
                    android:textSize="20sp"
                    android:verticalScrollbarPosition="defaultPosition" />

            </LinearLayout>

            <TextView
                android:id="@+id/play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="130dp"
                android:clickable="true"
                android:onClick="start"
                android:text="play"
                android:textAllCaps="true"
                android:textColor="#7C1818"
                android:textSize="75sp"
                android:textStyle="bold" />

        </LinearLayout>

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/opica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:src="@drawable/running_monkey" />


        <ImageView
            android:id="@+id/auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:srcCompat="@drawable/budova1" />

        <ImageView

            android:id="@+id/auto2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:srcCompat="@drawable/budova12" />

        <ImageView

            android:id="@+id/auto3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:srcCompat="@drawable/budova13" />

        <ImageView

            android:id="@+id/auto4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:srcCompat="@drawable/budova12" />
    </FrameLayout>
</LinearLayout>